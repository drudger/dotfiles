# rails aliases
# start server
alias rsb='rails server -b 0.0.0.0'

# generate aliases
alias  rg='rails generate '
alias rgc='rails generate controller '
alias rgi='rails generate integration_test '
alias rgm='rails generate model '
alias rgr='rails generate resource '

# destroy aliases
alias rdc='rails destroy  controller '
alias rdm='rails destroy  model '

# rspec aliases
alias prep='bundle exec rake test:prepare'
alias   rs='rspec spec/'

# db aliases
alias mig='rake db:migrate'
alias rol='rake db:rollback'

# bundle aliases
alias bune='bundle exec '
alias buni='bundle install '
alias bunu='bundle update '

# console aliases
alias  rc='rails console'
alias rcs='rails console --sandbox'

